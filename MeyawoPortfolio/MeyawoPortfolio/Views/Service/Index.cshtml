@model List<MeyawoPortfolio.Models.TblService>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h3>Hizmetler Listesi</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet  Başlığı</th>
        @*<th>Açıklama</th>*@

        <th> Sil</th>
        <th>Güncelle </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            @*<td>@item.Description</td>*@

            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-success">Güncelle</a></td>



        </tr>
    }

</table>
<a href="/Service/CreateService" class="btn btn-primary">Yeni Hizmet Girişi</a>

